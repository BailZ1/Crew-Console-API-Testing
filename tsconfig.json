// tsconfig.json
{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": { "skipLibCheck": true, "types": ["node"] },
  "include": [
    "nuxt.config.ts",
    "server/**/*.ts",
    "utils/**/*.ts",          
    "types/**/*.d.ts",
    "app.vue",
    "pages/**/*.vue",
    "components/**/*.vue"
  ],
  "exclude": ["node_modules", ".nuxt", ".output"]
}
